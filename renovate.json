{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>padok-team/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "go",
      "matchPackageNames": [
        "/gomod/"
      ]
    },
    {
      "groupName": "docker",
      "matchPackageNames": [
        "/docker/"
      ]
    },
    {
      "groupName": "github",
      "matchPackageNames": [
        "/github/"
      ]
    }
  ]
}
